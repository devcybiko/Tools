infile=$1
outfile=$2
if [ $# -lt 2 ]; then
	echo LessonPlan.md to PPTX
	echo Usage: "ltp <infile> <outfile>"
	exit 0
fi
sed -e 's/^ *<summary><strong>/### /' $infile > ./a.jnk
sed -e 's/^ *(!\[.*)$/xxxxxxxx/' ./a.jnk > ./aa.jnk
lessonToPowerpoint ./aa.jnk > ./b.jnk
pandoc --standalone -f markdown -t pptx ./b.jnk -o $outfile --reference-doc=/Users/greg/bin/ltpTemplate.pptx
